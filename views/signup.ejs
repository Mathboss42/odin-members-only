<form action="" method="POST">
    <div class="form-section">
        <label for="firstname">First Name:</label>
        <input type="text" name="firstname" id="firstname" minlength="2" maxlength="100" class="form-control">
    </div>
    <div class="form-section">
        <label for="lastname">Last Name:</label>
        <input type="text" name="lastname" id="lastname" minlength="2" maxlength="100" class="form-control">
    </div>
    <div class="form-section">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" minlength="2" maxlength="100" class="form-control">
    </div>
    <div class="form-section">
        <label for="password">Password:</label>
        <input type="text" name="password" id="password" minlength="8" maxlength="16" class="form-control">
    </div>
    <div class="form-section">
        <label for="status">Membership Status:</label>
        <select name="status" id="status" class="form-control">
            <option value="user">Regular User</option>
            <option value="member">VIP: Member</option>
        </select>
    </div>
    <div class="form-section">
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
</form>