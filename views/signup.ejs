<form action="" method="POST">
    <div class="form-section">
        <label for="firstname">First Name:</label>
        <input type="text" name="firstname" id="firstname" minlength="2" maxlength="100" class="form-control" value="<%= firstName ? firstName : '' %>" required>
    </div>
    <div class="form-section">
        <label for="lastname">Last Name:</label>
        <input type="text" name="lastname" id="lastname" minlength="2" maxlength="100" class="form-control" value="<%= lastName ? lastName : '' %>" required>
    </div>
    <div class="form-section">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" minlength="2" maxlength="100" class="form-control" value="<%= username ? username : '' %>" required>
    </div>
    <div class="form-section">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" minlength="8" maxlength="16" class="form-control" required>
    </div>
    <div class="form-section">
        <label for="passwordconfirmation">Confirm Password:</label>
        <input type="password" name="passwordconfirmation" id="passwordconfirmation" minlength="8" maxlength="16" class="form-control" required>
    </div>
    <div class="form-section">
        <label for="adminpassword">Admin Password: (to create admin account)</label>
        <input type="password" name="adminpassword" id="adminpassword" class="form-control">
    </div>
    <div class="form-section">
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
</form>