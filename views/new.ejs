<form action="" method="POST">
    <div class="form-section">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" class="form-control" minlength="1" required value="<%= title ? title : '' %>">
    </div>
    <div class="form-section">
        <label for="text">Contents:</label>
        <textarea name="text" id="text" class="form-control" cols="30" rows="10" required minlength="10" value="<%= title ? title : '' %>"></textarea>
    </div>
    <div class="form-section">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>